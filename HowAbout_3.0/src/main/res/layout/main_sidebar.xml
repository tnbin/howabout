<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp"
        android:layout_marginLeft="-50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99F3C5C5"
        android:paddingLeft="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ff5757"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/confetti_lottie_animation2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="저기어때."
                android:fontFamily="@font/jalnan_main"
                android:textColor="@color/white"
                android:textSize="40dp"/>

            <TextView
                android:id="@+id/helloId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/godo_m"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="저기어때에 오신걸 환영합니다."
                android:textColor="@color/white"
                android:textSize="18dp" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_homebar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_home_24"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:text="  홈"
                    android:textSize="20dp"
                    android:fontFamily="@font/godo_m"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_courcebar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_search_24_red"
                    android:gravity="center_vertical"
                    android:text="  코스 찾기"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/godo_m"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_mypagebar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_account_howaboutcircle_24"
                    android:gravity="center_vertical"
                    android:text="  마이페이지"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/godo_m"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_mycourcebar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_add_location_alt_24"
                    android:gravity="center_vertical"
                    android:text="  내 코스"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/godo_m"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logout"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:text="로그아웃"
                    android:textSize="20dp"
                    android:fontFamily="@font/sleigothic"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/login"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_login_24"
                    android:text="로그인"
                    android:textSize="20dp"
                    android:fontFamily="@font/sleigothic"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>