<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_reset_pwcheck"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="비밀번호 재설정"
            android:textSize="20dp"
            android:fontFamily="@font/jalnan_main"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/godo_m"
            android:text="회원가입 시 등록한 아이디와 이메일 주소를 입력해주세요"
            android:textColor="#9C9B9B"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <EditText
                android:id="@+id/ed_find_pw_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/round_btn"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:hint="  아이디"
                android:fontFamily="@font/godo_m"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHighlight="#EC9393"
                android:textCursorDrawable="@drawable/cursor"
                android:textSelectHandle="@drawable/select_handler"
                android:textSelectHandleLeft="@drawable/select_handler"
                android:textSelectHandleRight="@drawable/select_handler"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_find_pw_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/round_btn"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:hint="  이메일 주소"
                android:fontFamily="@font/godo_m"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHighlight="#EC9393"
                android:textCursorDrawable="@drawable/cursor"
                android:textSelectHandle="@drawable/select_handler"
                android:textSelectHandleLeft="@drawable/select_handler"
                android:textSelectHandleRight="@drawable/select_handler"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_email_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cream"
                android:text="이메일 인증"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/godo_m"
                android:textColor="@color/gray"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_find_emailconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/ed_find_pw_email_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/edge_black"
                android:drawableStart="@drawable/ic_baseline_key_24"
                android:hint="  인증 번호"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHighlight="#EC9393"
                android:textCursorDrawable="@drawable/cursor"
                android:textSelectHandle="@drawable/select_handler"
                android:textSelectHandleLeft="@drawable/select_handler"
                android:textSelectHandleRight="@drawable/select_handler"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_emailconfirmck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="#ff5757"
                android:text="확인"
                android:textColor="#fff"
                android:textSize="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_find_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/godo_m"
            android:background="@drawable/round_btn"
            android:padding="10dp"
            android:text="확인" />

    </LinearLayout>

</FrameLayout>