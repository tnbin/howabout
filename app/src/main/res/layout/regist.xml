<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/howabout_logo" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/edge_black"
            android:hint="이름:"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge_black"
            android:hint="아이디:"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge_black"
            android:hint="비밀번호:"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edge_black"
                android:hint="비밀번호 확인:"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pwcheckbutton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#ff5757"
                android:text="확인"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="80dp"
                android:text="남자" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/signBirth"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edge_black"
                android:hint=" 생년(4자)"
                android:inputType="date"
                android:text="" />

            <EditText
                android:id="@+id/signBirth2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edge_black"
                android:hint=" 월"
                android:inputType="date"
                android:text="" />

            <EditText
                android:id="@+id/signBirth3"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/edge_black"
                android:hint=" 일"
                android:inputType="date"
                android:text="" />
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FF5757"
            android:text="회원가입"
            android:textSize="15dp" />

    </LinearLayout>


</ScrollView>