<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원하는 조건을 선택해주세요 :)"
            android:fontFamily="@font/sleigothic"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/dialog_click_rest"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식점부터 선택할래요! "
            android:textStyle="bold"
            android:fontFamily="@font/nanumsquareneo_cbd"
            android:textSize="13dp"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dialog_click_cafe"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카페부터 선택할래요! "
            android:fontFamily="@font/nanumsquareneo_cbd"
            android:textStyle="bold"
            android:textSize="13dp"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
            android:gravity="center"
            />

<!--        <TextView-->
<!--            android:id="@+id/dialog_click_info"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="장소 정보를 볼래요! "-->
<!--            android:textSize="12dp"-->
<!--            android:drawableRight="@drawable/ic_baseline_chevron_right_24"-->
<!--            android:gravity="center"-->
<!--            />-->

    </LinearLayout>

</androidx.cardview.widget.CardView>